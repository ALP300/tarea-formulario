@model curso_form.Models.Curso

@{
    ViewData["Title"] = "Crear Nuevo Curso";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            padding-top: 50px;
        }

        .container {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
            padding: 30px;
        }

        h1 {
            color: #343a40;
            margin-bottom: 30px;
            text-align: center;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>

        <form asp-controller="Curso" asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Nombre">Nombre del Curso:</label>
                <input asp-for="Nombre" class="form-control" required />
            </div>
            
            <div class="form-group">
                <label asp-for="Categoria">Categoría:</label>
                <select asp-for="Categoria" class="form-control" required>
                    <option value="">Seleccionar Categoría</option>
                    <option value="inteligencia-artificial">Inteligencia Artificial</option>
                    <option value="ciberseguridad">Ciberseguridad</option>
                    <option value="desarrollo-web">Desarrollo Web</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Creditos">Créditos:</label>
                <input asp-for="Creditos" class="form-control" type="number" min="1" required />
                <span asp-validation-for="Creditos" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>¿El curso es remoto?</label>
                <div class="custom-control custom-radio">
                    <input type="radio" id="remotoSi" name="Remoto" class="custom-control-input" value="true" required>
                    <label class="custom-control-label" for="remotoSi">Sí</label>
                </div>
                <div class="custom-control custom-radio">
                    <input type="radio" id="remotoNo" name="Remoto" class="custom-control-input" value="false" required>
                    <label class="custom-control-label" for="remotoNo">No</label>
                </div>
            </div>

            <!-- Agregamos la validación de material y videos -->
            <div class="form-group">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="materialCheckbox" asp-for="Material">
                    <label class="custom-control-label" for="materialCheckbox">¿Cuenta con material?</label>
                </div>
            </div>
            <div class="form-group">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="videosCheckbox" asp-for="Videos">
                    <label class="custom-control-label" for="videosCheckbox">¿Cuenta con videos?</label>
                </div>
            </div>

            <div class="form-group">
                <label>Hora de Inicio:</label>
                <input asp-for="HoraInicio" type="time" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Hora de Fin:</label>
                <input asp-for="HoraFin" type="time" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-primary">CREAR CURSO</button>
        </form>

        @if (ViewData["Message"] != null)
        {
            <div class="alert alert-success mt-3" role="alert">
                @ViewData["Message"]
            </div>
        }

        <!-- Mostrar los datos del curso ingresados -->
        @if (Model != null)
        {
            <h2>Información del Curso:</h2>
            <ul>
                <li><strong>Nombre del Curso:</strong> @Model.Nombre</li>
                <li><strong>Categoría:</strong> @Model.Categoria</li>
                <li><strong>Créditos:</strong> @Model.Creditos</li>
                <li><strong>Remoto:</strong> @Model.Remoto</li>
                <li><strong>Material:</strong> @Model.Material</li>
                <li><strong>Videos:</strong> @Model.Videos</li>
                <li><strong>Hora de Inicio:</strong> @Model.HoraInicio</li>
                <li><strong>Hora de Fin:</strong> @Model.HoraFin</li>
            </ul>
        }
    </div>
</body>
</html>
